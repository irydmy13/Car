@model IEnumerable<Car.Core.Domain.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Car List</h1>

<p>
    <a asp-action="Create" class="btn btn-warning">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(item.ImagePath))
                {
                    <img src="@item.ImagePath" class="card-img-top" alt="Car Image" style="height: 200px; object-fit: cover;">
                }
                else
                {
                    <img src="https://via.placeholder.com/300x200?text=No+Image" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;">
                }

                <div class="card-body">
                    <h5 class="card-title">@item.Make @item.Model</h5>
                    <p class="card-text">
                        <strong>Year:</strong> @item.Year <br />
                        <strong>Price:</strong> $@item.Price <br />
                        <strong>Used:</strong> @(item.IsUsed ? "Yes" : "No")
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
        </div>
    }
</div>